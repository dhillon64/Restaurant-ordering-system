@model IEnumerable<Restaurant_ordering_system.Models.CategoryVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-danger">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Create">Create New <i class="fas fa-plus"></i></a>
        </div>
    </div>
</div>

@if (Model.Count() == 0)
{
<div class="d-flex justify-content-center">
    <h3>No Categories Exist...</h3>
</div>

}
else
{
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                <h4>
                    @Html.DisplayFor(modelItem => item.Name)
                </h4>
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit <i class="fas fa-edit"></i></a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete <i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
}
